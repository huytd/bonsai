<div class="header-background container-fluid" xmlns="http://www.w3.org/1999/html">
    <div class="header container">
        <div class="row row-eq-height">
            <div class="logo col-xs-2">
                <a href="/news" class="logo-link">
                <span><img src="/assets/logo-small.png" class="header-icon" /><span>POONSAI</span></span>
                </a>
            </div>
            <div class="search-box col-xs-7">
                <div class="form-group has-feedback">
                    <input type="text" placeholder="Tìm kiếm..." class="form-control search-textbox">
                  <span class="glyphicon glyphicon-search form-control-feedback" aria-hidden="true"></span>
                </div>
            </div>
            <div class="col-xs-3">

                 <button class="btn btn-success">Đăng bài</button> &ensp;&ensp;
              <span id="user-info" >
                <% if user_signed_in? %>



                    <span class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Home<b class="caret"></b>
                      </a>
                      <ul class="dropdown-menu">

                        <li><a href=""><%= current_user.name %></a></li>

                        <li class="divider"></li>
                        <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete  %></li>

                      </ul>
                    </span>


                <% else %>
                    <%= link_to "Sign in", {:controller => 'login',:action =>'index'} %>
                <% end %>
              </span>


            </div>
        </div>
    </div>
</div>
